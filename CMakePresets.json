{
	"version": 3,
	"configurePresets": [
		{
			"name": "Base",
			"hidden": true,
			"generator": "Ninja Multi-Config",
			"binaryDir": "${sourceDir}/Build/${presetName}",
			"cacheVariables": {
				"MATHLIB_BUILD_TESTS_OPT": true
			}
		},
		{
			"name": "Clang",
			"inherits": "Base",
			"cacheVariables": {
				"CMAKE_C_COMPILER": "clang",
				"CMAKE_CXX_COMPILER": "clang++"
			}
		},
		{
			"name": "GCC",
			"inherits": "Base",
			"cacheVariables": {
				"CMAKE_C_COMPILER": "gcc",
				"CMAKE_CXX_COMPILER": "g++"
			}
		},
		{
			"name": "Windows",
			"hidden": true,
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Windows"
			}
		},
		{
			"name": "VS_2019",
			"inherits": [

				"Base",
				"Windows"
			],
			"generator": "Visual Studio 16 2019"
		},
		{
			"name": "VS_2022",
			"inherits": [

				"Base",
				"Windows"
			],
			"generator": "Visual Studio 17 2022"
		}
	],
	"buildPresets": [
		{
			"name": "Base",
			"hidden": true,
			"verbose": true
		},
		{
			"name": "Debug",
			"hidden": true,
			"inherits": "Base",
			"configuration": "Debug"
		},
		{
			"name": "Release",
			"hidden": true,
			"inherits": "Base",
			"configuration": "Release"
		},
		{
			"name": "Clang Debug",
			"inherits": "Debug",
			"configurePreset": "Clang"
		},
		{
			"name": "Clang Release",
			"inherits": "Release",
			"configurePreset": "Clang"
		},
		{
			"name": "GCC Debug",
			"inherits": "Debug",
			"configurePreset": "GCC"
		},
		{
			"name": "GCC Release",
			"inherits": "Release",
			"configurePreset": "GCC"
		},
		{
			"name": "VS_2019 Debug",
			"inherits": "Debug",
			"configurePreset": "VS_2019"
		},
		{
			"name": "VS_2019 Release",
			"inherits": "Release",
			"configurePreset": "VS_2019"
		},
		{
			"name": "VS_2022 Debug",
			"inherits": "Debug",
			"configurePreset": "VS_2022"
		},
		{
			"name": "VS_2022 Release",
			"inherits": "Release",
			"configurePreset": "VS_2022"
		}
	],
	"testPresets": [
		{
			"name": "Base",
			"hidden": true,
			"output": {
				"verbosity": "verbose"
			}
		},
		{
			"name": "Debug",
			"hidden": true,
			"inherits": "Base",
			"configuration": "Debug"
		},
		{
			"name": "Release",
			"hidden": true,
			"inherits": "Base",
			"configuration": "Release"
		},
		{
			"name": "Clang Debug",
			"inherits": "Debug",
			"configurePreset": "Clang"
		},
		{
			"name": "Clang Release",
			"inherits": "Release",
			"configurePreset": "Clang"
		},
		{
			"name": "GCC Debug",
			"inherits": "Debug",
			"configurePreset": "GCC"
		},
		{
			"name": "GCC Release",
			"inherits": "Release",
			"configurePreset": "GCC"
		},
		{
			"name": "VS_2019 Debug",
			"inherits": "Debug",
			"configurePreset": "VS_2019"
		},
		{
			"name": "VS_2019 Release",
			"inherits": "Release",
			"configurePreset": "VS_2019"
		},
		{
			"name": "VS_2022 Debug",
			"inherits": "Debug",
			"configurePreset": "VS_2022"
		},
		{
			"name": "VS_2022 Release",
			"inherits": "Release",
			"configurePreset": "VS_2022"
		}
	]
}
  